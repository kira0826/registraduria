<?xml version="1.0" encoding="UTF-8"?>

<icegrid>
    <application name="ConsultantServer">
        <server-template id="ConsultantServerTr">

            <parameter name="worker_id"/>
            <parameter name="master_id"/>
            
            <server id="ConsultantServer-${master_id}" exe="java" activation="always">
                <option>-jar</option>
                <option>/home/computacion2/icegrid_node/jars/consultantServer.jar</option>
                <option>--Worker.ID=${worker_id}</option>
                <option>--Master.ID=${master_id}</option>
                <property name="Ice.StdErr" value="/home/computacion2/icegrid_node/jars/ConsultantServer-${master_id}.stderr.log" />
                <property name="Ice.StdOut" value="/home/computacion2/icegrid_node/jars/ConsultantServer-${master_id}.stdout.log" />
                <adapter name="ConsultantServerAdapter">
                    <object identity="ConsultantServiceManagerIdentity-${master_id}" type="::RegistryModule::ConsultantServiceManager" property="Identity" />
                </adapter>
            </server>   
        </server-template>
    </application>

    <node name="NodeMaster1">
        <server-instance template="ConsultantServerTr" 
            worker_id="1" master_id="1"/>
    </node>

    <node name="NodeMaster2">
        <server-instance template="ConsultantServerTr"
            worker_id="2" master_id="2"/>
    </node>
</icegrid>
