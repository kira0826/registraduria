<?xml version="1.0" encoding="UTF-8"?>

<icegrid>
    <application name="ProxyPoolConnection">
        <server-template id="ProxyPoolConnectionServer">
            <parameter name="index"/>
            <parameter name="host"/>
            <parameter name="port"/>
            <server id="ProxyPoolConnectionServer-${index}" exe="java" activation="always">
                <option>-jar</option>
                <option>./jars/proxyPoolConnection.jar</option>
                <adapter  name="ProxyPoolConnectionAdapter" endpoints="tcp -h ${host} -p ${port}">
                    <object identity="ProxyPoolConnectionIdentity-${index}" type="::RegistryModule::PerformQuery" property="Identity" />
                </adapter>
            </server>
        </server-template>
    </application>
    
    <node name="Node1">
        <server-instance template="ProxyPoolConnectionServer" index="1" host="10.147.19.85" port="10001"/>
    </node>
    <node name="Node2">
        <server-instance template="ProxyPoolConnectionServer" index="2" host="10.147.19.239" port="10002" />
    </node>
</icegrid>